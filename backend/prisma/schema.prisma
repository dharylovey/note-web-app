datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  username String @unique
  email    String @unique
  password String
  notes    Note[]
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  tags      String[]
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
